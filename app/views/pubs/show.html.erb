<% content_for :title do -%>
 PlantFAdb: <%= "#{@pub.wos_title}." if @pub.wos_title && @pub.wos_title.downcase != 'none' %> <%= @pub.display_name %> 
<% end -%>

<% content_for :description do -%>
  Information on over 1500 publications on plant fatty acids with links to species analyzed, analytical data, and full text of publications. <%= "#{@pub.wos_title}." if @pub.wos_title && @pub.wos_title.downcase != 'none' %> <%= @pub.display_name %>
<% end -%>

<% content_for :top_bar do %>
  <% unless @pub.published? %>
    <p class='bg-warning'>This is an unpublished draft. <%= link_to 'Click here to view all draft data', drafts_path %></p>
  <% end %>
	<h1 class="pagetitle"><%= @pub.wos_title %></h1>
<% end %>

<% content_for :item_bar do %>
	<%= link_to 'Back', pubs_path, class: 'btn btn-primary' %>
  <% if can? :edit, @pub %>
    <%= link_to 'Edit', edit_pub_path(@pub), class: 'btn btn-primary' %>
    <%= link_to "Add Data", new_plants_pub_path(pub_id: @pub.id), class: 'btn btn-primary' %>
  <% end %>
<% end %>

<% if @pub.abstract %>
<div class='row'>
	<div class='well col-md-12'>
		<legend>Abstract</legend>
		<%= @pub.abstract %>
	</div>
</div>
<% end %>

<div class='row'>
	<div class='well col-sm-12 col-md-5' style='overflow:auto'>
		<legend>Citation</legend>
		<p>
		  <strong>Authors:</strong>
		  <%= @pub.wos_authors %>
		</p>

		<p>
		  <strong>Journal:</strong>
		  <%= @pub.wos_journal %>
		</p>
		
		<p>
		  <strong>Year:</strong>
		  <%= @pub.wos_year %>
		</p>
		
		<p>
		  <strong>Volume:</strong>
		  <%= @pub.wos_volume %>
		</p>

		<p>
		  <strong>Page:</strong>
		  <%= @pub.wos_pages %>
		</p>
		
		<p>
		  <strong>UID:</strong>
		  <%= @pub.wos_uid %>
		</p>
		
		<% if @pub.url %>
			<p>
			  <strong>URL:</strong>
			  <%= link_to @pub.url, @pub.url, target: '_blank'%>
			</p>
		<% end %>
		
		<% unless @pub.doi.blank? || @pub.doi.downcase == 'none' %>
			<p>
			  <strong>DOI:</strong>
			  <%= link_to @pub.doi, "https://doi.org/#{@pub.doi}", target: '_blank'%>
			</p>
		<% end %>
		
		<div style='overflow:auto'>
			<legend>SOFA citation(s)</legend>
			<% if @pub.original_pubs.empty? %>
				<% pubs = [@pub]  %>
			<% else %>
				<% pubs = @pub.original_pubs %>
			<% end %>
			<% pubs.each do |pub| %>
				<div class='well'>
					<p>
					  <strong>Authors:</strong>
					  <%= pub.authors %>
					</p>
			
					<p>
					  <strong>Journal:</strong>
					  <%= pub.journal %>
					</p>
			
					<p>
					  <strong>Year:</strong>
					  <%= pub.year %>
					</p>

					<p>
					  <strong>Volume:</strong>
					  <%= pub.volume %>
					</p>

					<p>
					  <strong>Page:</strong>
					  <%= pub.page %>
					</p>
				</div>
			<% end %>
		</div>
		
		<div style=''>
			<legend>SOFA Table(s)</legend>
			<% @pub.sofa_tabs.each do |tab| %>
				<div style='float:left;margin:0.25em'><%= link_to (tab.sofa_tab_id||'#'), tab.sofa_url, target: '_blank' %></div>
			<% end %>
		</div>
	</div>

	<div class='col-sm-12 col-md-7 well'>
		<legend>Plants</legend>
		<table class="table">
		  <thead>
		    <th>Genus</th>
		    <th>Species</th>
				<th>Order</th>
		    <th>Family</th>
				<th>Data Points</th>
        <th></th>
		  </thead>
		  <tbody>
		    <% @plants_pubs.order("plants.genus, plants.species").each do |pb| %>
		    <tr>
		      <td><%= link_to pb.plant.genus||"Unknown", plants_pub_path(pb) %></td>
		      <td><%= link_to pb.plant.species||"Unknown", plants_pub_path(pb) %></td>
		      <td><%= pb.plant.order_name %></td>
		      <td><%= pb.plant.family %></td>
          <% results = pb.published? ? pb.results.published.viewable : pb.results %>
					<td><%= results.count %>
            <% unless pb.remarks.blank? and pb.datasets.with_remarks.empty? %>
              <a class='pull-right glyphicon glyphicon-info-sign' data-toggle='tooltip' data-html='true' title="
                <%= "Remarks:<br/>#{pb.remarks}<br/><br/>" if pb.remarks %>
                <%= pb.datasets.with_remarks.map{|d| "#{d.dbxref.try(:name)}:#{d.dbxref_value}<br/>#{d.remarks}<br/>"}.join("<br/>") %>
              "></a>
            <% end %>
          </td>
		    </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>



