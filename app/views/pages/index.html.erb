<% content_for :top_bar do %>
	<h1>Page Content Management</h1>
<% end %>

<% content_for :item_bar do %>

<% end %>

<div class='panel table-responsive'>
	
  <table class='table table-striped'>
    <thead>
      <tr>
          <th>Title</th>
					<th>Description</th>
					<th>Options</th>
      </tr>
    </thead>

    <tbody>
      <% @pages.each do |page| %>
        <tr>
					<td><%= page.title %></td>
					<td><%= page.description %></td>
            <td>
            <%= link_to 'Edit', edit_page_path(page) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>