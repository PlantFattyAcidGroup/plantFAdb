<% content_for :top_bar do %>
	<h1 class="pagetitle">Names</h1>
<% end %>

<% content_for :item_bar do %>
    <%= link_to 'New Name', new_name_path, class: 'btn btn-primary'%>
    <%= form_tag names_path, method: :get do %>
      <div style="float:right;padding-left:1em"><%= submit_tag "Go", class: "button"%></div>
      <div style="float:right">Search: <%= text_field_tag :query, params[:query] %></div>
    <% end %>
<% end %>
  <div class="pagination">
    <span style="float:left"><%= paginate @names %></span>
    <span style="float:right;margin-right:2em"><%= page_entries_info @names %> Matching Results</span>
  </div>

<div class='container'>
  <table class='table table-custom'>
    <thead>
      <tr>
          <th>Type</th>
          <th>Name</th>
          <th>Measure</th>
          <th>Options</th>
      </tr>
    </thead>

    <tbody>
      <% @names.each do |name| %>
        <tr>
            <td><%= name.type %></td>
            <td><%= name.name %></td>
            <td><%= name.measure %></td>
            <td>
            <%= link_to 'Show', name %> |
            <%= link_to 'Edit', edit_name_path(name) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>