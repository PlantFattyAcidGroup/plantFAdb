<%= form_for(@plant) do |f| %>
  <% if @plant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plant.errors.count, "error") %> prohibited this plant from being saved:</h2>

      <ul>
      <% @plant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	
<div class='container'>
	<!-- <div style='float:left;width:25%'> -->
	<div class='col-md-3'>
	  <div class="field">
	    <%= f.label :common_name %><br>
	    <%= f.text_field :common_name, class: 'form-control',  :autofocus => true %>
	  </div>
	  <div class="field">
	    <%= f.label :name_status %><br>
	    <%= f.text_field :name_status, class: 'form-control' %>
	  </div>
	  <div class="field">
	    <%= f.label :matched_rank %><br>
	    <%= f.text_field :matched_rank, class: 'form-control' %>
	  </div>
	</div>
	<!-- <div style='float:left;width:25%'> -->
	<div class='col-md-3'>
	  <div class="field">
	    <%= f.label :order_name, "Order" %>*<br>
	    <%= f.text_field :order_name, class: 'form-control', required: true%>
	  </div>
	  <div class="field">
	    <%= f.label :family %>*<br>
	    <%= f.text_field :family, class: 'form-control', required: true %>
	  </div>
	  <div class="field">
	    <%= f.label :genus %>*<br>
	    <%= f.text_field :genus, class: 'form-control', required: true %>
	  </div>
	  <div class="field">
	    <%= f.label :species %>*<br>
	    <%= f.text_field :species, class: 'form-control', required: true %>
	  </div>
	  <div class="field">
	    <%= f.label :variety %><br>
	    <%= f.text_field :variety, class: 'form-control' %>
	  </div>
	  <div class="field">
	    <%= f.label :tissue %>*<br>
	    <%= f.select :tissue, options_for_select(Plant.pluck('distinct tissue'), @plant.tissue || 'Seed'), {required: true}, {class: 'form-control'} %>
	  </div>
	</div>
	<!-- <div style='float:left;width:35%'> -->
	<div class='col-md-6'>
	  <div class="field">
	    <%= f.label :tropicos_url %><br>
	    <%= f.text_area :tropicos_url, class: 'form-control' %>
	  </div>
	  <div class="field">
	    <%= f.label :note %><br>
	    <%= f.text_area :note, class: 'form-control' %>
	  </div>
	</div>
</div>

	<div class="actions;" style="clear:both">
	  <%= f.submit class: 'btn btn-primary' %>
	</div>
<% end %>
