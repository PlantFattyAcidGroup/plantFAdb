<% content_for :top_bar do %>
	<h1 class="pagetitle">
		<% if @plant.genus.blank? && @plant.species.blank? %>
		 <%= @plant.family || @plant.order || @plant.sofa_family %>
		<% else %>
			<%= @plant.genus %> <%= @plant.species %>
		<% end %>
		<small style='white-space:nowrap'><%= @plant.common_name || @plant.sofa_name %></small>
	</h1>
<% end %>

<% content_for :item_bar do %>
	<%= link_to 'Back', plants_path, class: 'btn btn-primary' %>
  <% if can? :edit, @plant %> <%= link_to 'Edit', edit_plant_path(@plant), class: 'btn btn-primary' %> <% end %>
<% end %>

<div class='container'>
	<div class='col-md-4'>
		<div class='well' style='overflow:scroll'>
			<legend>Classification</legend>
			<div style='min-height:300px'>
				<p>
				  <strong>Order:</strong>
				  <%= @plant.order_name %>
				</p>
				<p>
				  <strong>Family:</strong>
				  <%= @plant.family %>
				</p>
				<p>
				  <strong>Genus:</strong>
				  <%= @plant.genus %>
				</p>
				<p>
				  <strong>Species:</strong>
				  <%= @plant.species %>
				</p>
				<% if @plant.common_name %>
					<p>
					  <strong>Common Name:</strong>
					  <%= @plant.common_name %>
					</p>
				<% end %>
			
				<% unless @plant.tropicos_url.blank? %>
			    <legend>External Link(s)</legend>
					<% @plant.tropicos_url.split(";").each do |url| %>
			    	<%= link_to url %><br/>
					<% end %>
				<% end %>
		
				<% unless @plant.note.blank? %>
				   <legend>Note</legend><br>
				   <%= @plant.note %>
				<% end %>
			</div>
		</div>
		<div class='well'>
			<legend>Name Resolution</legend>
			<div class='row'>
				<div class='col-md-12  col-sm-12 col-xs-12'>
						<legend><h5>TNRS Accepted data</h5></legend>
					  <p>
					    <b>Family:</b>
							<%= @plant.tnrs_family %>
					  </p>
					  <p>
					    <b>Name:</b>
							<%= @plant.tnrs_name %>
					  </p>
					  <p>
					    <b>Accepted Rank:</b>
							<%= @plant.accepted_rank %>
					  </p>
					  <p>
					    <strong>Matched rank:</strong>
					    <%= @plant.matched_rank %>
					  </p>
					  <p>
					    <strong>Name status:</strong>
					    <%= @plant.name_status %>
					  </p>
				</div>
			</div>
			<div class='row'>
				<div class='col-md-12 col-sm-12 col-xs-12'>
						<legend><h5>Original SOFA Data</h5></legend>
					  <p>
					    <b>Family:</b>
					    <%= @plant.sofa_family %>
					  </p>

					  <p>
					    <b>Name:</b>
					    <%= @plant.sofa_name %>
					  </p>
						<br/>
				</div>
		
			</div>
				
			<div class='clearfix row small'>
				<div class='col-md-12'>
					<br/>
					Plant names were updated using the Taxanomic Name Resolution Service (<%= link_to "http://tnrs.iplantcollaborative.org", "http://tnrs.iplantcollaborative.org" %>)<br/><br/>
					Note: There may be other accepted names for a species not displayed here
				</div>
			</div>
		</div>
	</div>
	<div class='col-md-8'>
		<div class='well' style='overflow:scroll'>
			<legend>Data</legend>
			<span> 
				<%= link_to "View #{pluralize @plant.pubs.count,"Publication"}", pubs_path(plant_id: @plant.id) %>
			</span> |
			<span>
				<%= link_to "View #{pluralize @plant.results.count, "Data Point"}", results_path(plant_id: @plant.id) %>
			</span>
			<!-- <div class='row'>
				<div class='col-md-3'>
					<%= link_to "#{@plant.pubs.count} Publications", pubs_path(plant_id: @plant.id), class: 'btn btn-default' %>
				</div>
				<div class='col-md-3'>
					<%= link_to "#{@plant.results.count} Data Points", results_path(plant_id: @plant.id), class: 'btn btn-default' %>
				</div>
			</div> -->
			<% unless @fatty_acid_data.empty? %>
				<legend><h5>Fatty Acid Data</h5></legend>
				<% @fatty_acid_data.each_with_index do |(key, subdata),index| %>
					<div id='fa_plant_data_viz_<%= index %>' style='min-width:700px;height:350px'></div>
				<% end %>
			<% end %>
			<% unless @parameter_data.empty? %>
			<legend><h5>Parameters</h5></legend>
				<% @parameter_data.each_with_index do |(key, subdata),index| %>
					<div id='p_plant_data_viz_<%= index %>' style='min-width:700px;height:350px'></div>
				<% end %>
			<% end %>
		</div>
	</div>
</div>

