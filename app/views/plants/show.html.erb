<% content_for :top_bar do %>
	<h1 class="pagetitle">Plant: <%= @plant.id %></h1>
<% end %>

<% content_for :item_bar do %>
	<%= link_to 'Back', plants_path, class: 'btn btn-primary' %>
  <%= link_to 'Edit', edit_plant_path(@plant), class: 'btn btn-primary' %>
<% end %>

<p>
  <strong>Order:</strong>
  <%= @plant.order_name %>
</p>

<p>
  <strong>Family:</strong>
  <%= @plant.family %>
</p>

<p>
  <strong>Genus:</strong>
  <%= @plant.genus %>
</p>
<p>
  <strong>Species:</strong>
  <%= @plant.species %>
</p>




